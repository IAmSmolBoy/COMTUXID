<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageButton
        android:id="@+id/s2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="S1002"
        android:onClick="add"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/s3"
        app:layout_constraintTop_toTopOf="@+id/s3"
        app:srcCompat="@drawable/billie_jean" />

    <TextView
        android:id="@+id/txtArtist4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ed Sheeran"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtArtist5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Buble"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/txtTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:text="The way you look Tonight"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/s"
        app:layout_constraintTop_toTopOf="@+id/s" />

    <TextView
        android:id="@+id/txtTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:text="Bille Jean"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/s2"
        app:layout_constraintTop_toTopOf="@+id/s2" />

    <TextView
        android:id="@+id/txtArtist6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Jackson"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/txtTitle3"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle3" />

    <ImageButton
        android:id="@+id/s"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:contentDescription="S1001"
        android:onClick="add"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/s2"
        app:layout_constraintTop_toTopOf="@+id/s2"
        app:srcCompat="@drawable/michael_buble_collection" />

    <ImageButton
        android:id="@+id/s3"
        android:layout_width="80dp"
        android:layout_height="89dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="S1003"
        android:onClick="add"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photograph" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:text="One"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/s3"
        app:layout_constraintTop_toTopOf="@+id/s3" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@android:color/darker_gray"
        android:hint="View Playlist"
        android:onClick="favActivity"
        android:textColorHint="@color/black"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>